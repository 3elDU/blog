---
layout: base.njk
---

{% if (not page.url.endsWith(".css")) %}
<div class="article-content-wrapper">
  <main class="article-content">
    <section class="article-title">
      <h1>{{ title }}</h1>
      <p class="article-written">
        Written on
        <date datetime="{{ page.date }}">
          {{ page.date | formatDate }}
        </date>
      </p>
      <p class="article-tags">
        {% for tag in tags %}
        <span class="article-tag">
          {{ tag }}
        </span>
        {% endfor %}
      </p>
    </section>
    {{ content | safe }}
  </main>
</div>
{% else %}
{{ content | safe }}
{% endif %}
