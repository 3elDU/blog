{
  // All files processed by eleventy
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "allowJs": true,
    // doesn't do anything because files are emitted by the bundler
    "outDir": "./dist"
  },
  "include": ["./scripts/**/*"]
}
