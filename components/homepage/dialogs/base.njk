<dialog id="{{ id }}" class="dialog dialog-target">
  <header class="header">
    <h1 class="title">
      {% block title %}
      {% endblock title %}
    </h1>
    <form class="close" method="dialog" title="Close">
      <button class="button" autofocus>
        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" aria-hidden="true">
          <path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z" />
        </svg>
      </button>
    </form>
  </header>
  <div class="body">
    <section class="article unlimited-width">
      {% block body %}
      {% endblock body %}
    </section>
  </div>
</dialog>